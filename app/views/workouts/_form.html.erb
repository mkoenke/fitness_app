<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>
<%= form_for @workout do |f| %>
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :name %>

    <%= f.label "Title" %>
    <%= f.text_field :kind %>

    <%= f.label :date %>
    <%= f.date_field :date %>
    
    <%= f.label :time %>
    <%= f.time_field :time %><br><br>
    
        <%= form_tag new_workout_path, method: :get do %>
            <%= submit_tag "All", name: :all%>
        <% end %>
        <%= form_tag new_workout_path, method: :get do %>
            <%= submit_tag "Olympic Weightlifting", name: :olympic%>
        <% end %>
        <%= form_tag new_workout_path, method: :get do %>
            <%= submit_tag "Arms/Shoulders", name: :arms%>
        <% end %>
        <%= form_tag new_workout_path, method: :get do %>
            <%= submit_tag "Legs", name: :legs%>
        <% end %>
        <%= form_tag new_workout_path, method: :get do %>
            <%= submit_tag "Chest", name: :chest %>
        <% end %>
        <%= form_tag new_workout_path, method: :get do %>
            <%= submit_tag "Back", name: :back%>
        <% end %>

    <%= f.fields_for :exercise_workouts do |b| %>
        <%= b.label :exercise_id %><br>
        <%= b.collection_select :exercise_id, @exercises, :id, :name, prompt: true%>
        <%= b.label :sets %>
        <%= b.number_field :sets %>
        <%= b.label :reps %>
        <%= b.number_field :reps %><br>
        <%= b.check_box :_destroy %>Delete<br>
    <% end %>

    <%= f.submit %>
<% end %>