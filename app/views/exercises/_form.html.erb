<% if flash[:errors]%>
<% flash[:errors].each do |error|%>
<p style="color:red;"><%= error %> <br>
<% end%>
<% end%>

<%= form_for @exercise do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :category %><br>
    <%= f.text_field :category %><br>

    <%= f.label :description %><br>
    <%= f.text_field :description %><br>
    
    <%= f.label :video %><br>
    <%= f.text_field :video %><br>

    <%= f.submit %>
<% end %>