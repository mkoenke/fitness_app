<h1>Profile</h1>
<h3>Name: <%= @user.name %></h3>
<h3>Age: <%= @user.age %></h3>
<h3>Username: <%= @user.username %></h3>
<h3><%= button_to "Create a Stat!", new_stat_path, method: :get %></h3>
<%= button_to "Edit Profile", edit_user_path(@user), method: :get %>
<h3>Scheduled Workouts:</h3>
<%= month_calendar events: @appointments do |date, appointments| %>
  <%= date.strftime("%m/%d/%Y") %>

  <% appointments.each do |appointment| %>
    <div>
      Workout: <%= link_to appointment.workout.kind, workout_path(appointment.workout) %> <br>   Location: <%= appointment.location%>
    </div>
  <% end %>
<% end %>
