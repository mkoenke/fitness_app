<% if flash[:user_errors]%>
    <% flash[:user_errors].each do |error|%>
        <p style="color:red;"><%= error %> <br>
    <% end%>
<% end%>
<div class="form-container">
<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :username %>
<%= f.text_field :username %>
<%= f.label :password %>
<%= f.password_field :password %>
<%= f.label "Confirm Password" %>
<%= f.password_field :password_confirmation %><br><br>
<%= f.label :age %>
<%= f.number_field :age %>
<%= f.label :weight %>
<%= f.number_field :weight %>
<%= f.label :height %>
<%= f.number_field :height %>
<%= f.label "Profile Photo" %>
<%= f.file_field :photo %>
<br><br>
<%= f.submit :class => "form-buttons" %>
<% end %>
</div>