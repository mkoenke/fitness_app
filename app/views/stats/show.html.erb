<h1>Stat Information</h1>
<h3>User: <%= @stat.user.name %></h3>
<h3>Exercise: <%= @stat.exercise.name %></h3>

<h3>Weight: <%= @stat.weight %></h3>
<h3>Comment: <%= @stat.comment %></h3>
<%= button_to "Edit Stat", edit_stat_path(@stat), method: :get, class: 'form-buttons' %> <br>
<%= button_to "View All Stats", stats_path, method: :get, class: 'form-buttons' %><br>
<%= button_to "Delete Stat", stat_path(@stat), method: :delete, class: 'form-buttons' %>