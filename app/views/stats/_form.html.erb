<%= form_for @stat do |f| %>
<%= f.label :user_id %>
<%= f.collection_select :user_id, User.all, :id, :name, prompt: true %>
<%= f.label :exercise_id %>
<%= f.collection_select :exercise_id, Exercise.all, :id, :name, prompt: true %>
<%= f.label :weight %>
<%= f.number_field :weight %>
<%= f.label :comment %>
<%= f.text_field :comment %>
<%= f.submit %>
<% end %>