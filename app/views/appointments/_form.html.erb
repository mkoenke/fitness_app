<% if flash[:appointment_errors]%>
<% flash[:appointment_errors].each do |error|%>
<p style="color:red;"><%= error %> <br>
<% end%>
<% end%>

<div class="form-container">
<%= form_for @appointment do |f| %>
<%= f.label :date %>
<%= f.date_field :date %>
<%= f.label :time %>
<%= f.time_field :time %>
<%= f.label :workout_id %>
<%= f.collection_select :workout_id, Workout.all, :id, :kind %>
<%= f.label :user_id %>
<%= f.collection_select :user_id, User.all, :id, :name %>
<%= f.label :location %>
<%= f.text_field :location %>
<%= f.submit :class => 'form-buttons' %>
<% end %>
</div>