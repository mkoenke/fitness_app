<div class="show-container">
<div class="show-tile">
<h1>Scheduled Workout:</h1>
<h3>Date: <%= @appointment.parsed_date %></h3>
<h3>Time: <%= @appointment.parsed_time %></h3>
<h3>Workout: <%= link_to @appointment.workout.kind, workout_path(@appointment.workout) %></h3>
<h3>User: <%= link_to @appointment.user.name, user_path(@appointment.user) %></h3>
<h3>Location: <%= @appointment.location %></h3>


<%= button_to "View Your Schedule", user_path(@appointment.user), method: :get, class: "form-buttons" %> <br>
<%= button_to "Edit Event", edit_appointment_path, method: :get, class: "form-buttons" %> <br>
<%= button_to "Delete Event", appointment_path(@appointment), method: :delete, class: "form-buttons" %> 

</div>
</div>